<Window x:Class="BookstoreEf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookstoreEf" xmlns:view="clr-namespace:BookstoreEf.View"
        mc:Ignorable="d"
        Background="MintCream"
        Height="500" Width="800" 
        MinHeight="450" MinWidth="700" 
        Title="The Amazing Bookstore">
    
    
    <!--<Grid>
        <view:ConfigurationView/>
    </Grid>-->

    <Grid Background="MintCream">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <view:MenuView Grid.Row="0"/>
        <view:ConfigurationView Grid.Row="1" Visibility="Visible"/>
        <view:EditView Grid.Row="1" Visibility="Hidden"/>

    </Grid>


</Window>





